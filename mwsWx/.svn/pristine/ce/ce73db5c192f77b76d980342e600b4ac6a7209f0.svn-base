<!--取消付款-->
<div class="pop-overlay" style="display:none"></div>
<div class="popup pop-orderReturn changeContact" style="display: none">
  <div class="pop-content">
    <div class="ct-cancel">
    	<h2 class="pop-title">撤销退款申请</h2>
    	<div class="pop-tips">
    		<p>确定撤销退款申请吗？取消后，您无法再次申请。</p>
    	</div>
    </div>
    <div class="btn-box clearfix">
    	<a href="javascript:;" class="change-cancel">否</a>
    	<a href="javascript:;" class="change-sure active">是</a>
    </div>
  
  </div>
</div>

<script src="../js/jquery-1.7.1.min.js"></script>
<script type="text/javascript">
	$(document).ready( function(){

		 //放弃付款
	    $('.btn-cancelApply').click(function(){
	    	$('.pop-overlay').show().animate({opacity:0.7},450);
	    	$('.changeContact').show();
	    	$('.ct-cancel').show();
	    	$(".ct-sureRec").hide();
	    });

	    //关闭弹窗
	    $('.change-cancel').click(function(){
	    	$('.pop-overlay').animate({opacity:0},500,function(){
	    		$('.pop-overlay').hide();
	    	});
	    	$('.changeContact').hide();
	    });


	})
</script>
