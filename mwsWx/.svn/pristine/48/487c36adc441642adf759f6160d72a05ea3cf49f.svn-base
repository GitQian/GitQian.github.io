<script type="text/javascript">

   var h=$(window).height();
       $('.popup').css('top',h);

	$(function(){

		$(".sun-li li").click( function(){
			$(this).addClass("crunte").siblings().removeClass("crunte");
			$(".sun-content div").hide().eq($('.sun-li li').index(this)).show();
		});

		//产品数量增加
	    $("#pop-chooseType").on('click','.choose-add',function(event){
	     var baseNum=$(this).siblings('.choose-num').text();
	     baseNum++;
	     $(this).siblings('.choose-num').text(baseNum).end().siblings('.choose-reduce').removeClass('noOperate');
	    });

		//产品数量减少
	    $("#pop-chooseType").on('click','.choose-reduce',function(event){
	     var baseNum=$(this).siblings('.choose-num').text();
	     if(baseNum>1){
	     	baseNum--;
	        $(this).siblings('.choose-num').text(baseNum);
	        baseNum==1?$(this).addClass("noOperate"):'';
	      }else{
	      	$(this).addClass("noOperate");
	      }
	    });
    
	    //选择
	    $('.type-btn').click(function(){
	    	openPop();
	    });

	    //关闭弹窗
	    $('.typeClose-btn').click(function(){
	    	closePop();
	    });

	    //选择规格
	    $('.typeBox').on('click','a',function(){
	    	$(this).addClass('selected').siblings().removeClass('selected');
	    });
	    //点击购买或者立即购买
	    $(".opt-shopping,.opt-cart").click(function(){
	    	openPop();
	    });

	    //点击别处关闭弹窗
	    $(".popup").click(function(e){
	    	var eTarget = e.target;
	    	if($(eTarget).closest('.pop-content').length==0){
	    		closePop();
	    	}
	    });

	  

	});

function openPop(){
	$('.pop-overlay').show().animate({opacity:0.7},450);
	$('.popup').animate({top:0},500);
	$('.popup').show();
	$(".chooseTypeBtn").hide();
	$(".chooseTypeSure").show();
	$("body").css('overflow','hidden');
}

function closePop(){
	$('.pop-overlay').animate({opacity:0},500,function(){
		$('.pop-overlay').hide();
	});
	$('.popup').animate({top:h},500,function(){
		$('.popup').hide();
	});

	$("body").css('overflow','visible');
}


</script>


<script>
	var elem = document.getElementById('huadong');
	window.mySwipe = Swipe(elem, {
	  	// auto: 1000,
	   	continuous: true,
			disableScroll: false,
			stopPropagation: true,
	  	callback: function(index, element) {
	  		$(".xiaoyuandian ul li").eq(index).addClass("cur").siblings().removeClass("cur");
	  	}
	});

	$(".xiaoyuandian ul li").click(
		function(){
			mySwipe.slide($(this).index(),500);
		}
	);
</script>