	</div>
	</body>
</html>


<script type="text/javascript" src="../../js/lib/jquery-1.7.1.min.js"></script>
<script>
window.onload=function(){
	//选择退款商品
	$('.order-li').on('click','.sel-p',function(){
    	var _icon=$(this).find('.icon-choose');
       _icon.hasClass('selected')?_icon.removeClass('selected'):_icon.addClass('selected');
	});

	//选择退款类型
	$('.iden-wrap').on('click','span',function(){
		var iconType=$(this).find(".iden-icon");
		if(iconType.hasClass('selected')){
		  iconType.removeClass('selected');	
		}else{
			iconType.addClass('selected')
			$(this).siblings().find(".iden-icon").removeClass('selected');}
		});
}
</script>
